# Watchtower Configuration Template
# Copy this file to .env and configure your settings

# Update Schedule (Cron format)
# Default: 2-4 AM CET daily
WATCHTOWER_SCHEDULE=0 0 2-4 * * *
TZ=Europe/Berlin

# Email Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=watchtower@planetplant.local
NOTIFICATION_EMAIL=admin@planetplant.local

# Slack Notifications (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# API Configuration
WATCHTOWER_API_TOKEN=generate-secure-token-here

# Debug Settings
WATCHTOWER_DEBUG=false
WATCHTOWER_LOG_LEVEL=info

# Service-specific settings
WATCHTOWER_TIMEOUT=300
HEALTH_CHECK_RETRIES=3
ROLLBACK_ENABLED=true