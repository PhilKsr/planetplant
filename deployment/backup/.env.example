# PlanetPlant Backup Configuration Template
# Copy this file to .env and configure your settings

# Restic Repository Configuration
RESTIC_REPOSITORY=/opt/planetplant/backups/restic-repo
RESTIC_PASSWORD=your-secure-encryption-password-min-32-chars

# Retention Policy
KEEP_DAILY=7
KEEP_WEEKLY=4
KEEP_MONTHLY=12
KEEP_YEARLY=2

# Cloud Upload Configuration
CLOUD_UPLOAD_ENABLED=false
CLOUD_PROVIDER=s3

# S3 Configuration (AWS/MinIO/Compatible)
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=eu-central-1
S3_ENDPOINT=https://s3.eu-central-1.amazonaws.com
S3_BUCKET=planetplant-backups

# Google Drive Configuration (Alternative)
GDRIVE_CLIENT_ID=your-google-client-id
GDRIVE_CLIENT_SECRET=your-google-client-secret
GDRIVE_TOKEN=your-google-oauth-token

# Backblaze B2 Configuration (Alternative)
B2_ACCOUNT_ID=your-backblaze-account-id
B2_APPLICATION_KEY=your-backblaze-app-key
B2_BUCKET=planetplant-backups

# Notification Configuration
NOTIFICATION_EMAIL=admin@planetplant.local
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SMTP Configuration (for email notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Backup Schedule (Cron format)
BACKUP_SCHEDULE_DAILY=0 2 * * *     # 02:00 daily
BACKUP_SCHEDULE_WEEKLY=0 3 * * 0    # 03:00 Sunday
BACKUP_SCHEDULE_MONTHLY=0 4 1 * *   # 04:00 first day of month

# Performance Tuning
PARALLEL_TRANSFERS=4
MAX_TRANSFER_RATE=10M
COMPRESSION_LEVEL=6

# Advanced Settings
BACKUP_VERIFICATION_ENABLED=true
PRE_RESTORE_BACKUP_ENABLED=true
AUTOMATIC_CLEANUP_ENABLED=true