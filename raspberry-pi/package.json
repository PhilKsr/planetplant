{
  "name": "planetplant-server",
  "version": "1.0.0",
  "description": "Smart Plant Watering System - Raspberry Pi Server",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "setup": "node scripts/setup-database.js",
    "migrate": "node scripts/migrate.js",
    "backup": "node scripts/backup.js",
    "logs": "pm2 logs plantplant-server",
    "status": "pm2 status",
    "restart": "pm2 restart plantplant-server",
    "stop": "pm2 stop plantplant-server",
    "deploy": "pm2 start ecosystem.config.js --env production"
  },
  "keywords": [
    "iot",
    "raspberry-pi",
    "plant-watering",
    "mqtt",
    "sensors",
    "automation"
  ],
  "author": "PlanetPlant Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "4.21.0",
    "express-rate-limit": "7.4.0",
    "helmet": "7.1.0",
    "cors": "2.8.5",
    "compression": "1.7.4",
    "morgan": "1.10.0",
    "winston": "3.14.2",
    "winston-daily-rotate-file": "5.0.0",
    "mqtt": "5.10.1",
    "better-sqlite3": "11.3.0",
    "sqlite3": "5.1.7",
    "redis": "4.7.0",
    "joi": "17.13.3",
    "bcryptjs": "2.4.3",
    "jsonwebtoken": "9.0.2",
    "uuid": "10.0.0",
    "dotenv": "16.4.5",
    "node-cron": "3.0.3",
    "nodemailer": "6.9.15",
    "socket.io": "4.8.0",
    "multer": "1.4.5-lts.1",
    "swagger-ui-express": "5.0.1",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "nodemon": "3.1.4",
    "jest": "29.7.0",
    "supertest": "7.0.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.30.0",
    "prettier": "3.3.3",
    "@types/jest": "29.5.12",
    "pm2": "5.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "logs/",
      "data/",
      "tests/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/PlanetPlant.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/PlanetPlant/issues"
  },
  "homepage": "https://github.com/yourusername/PlanetPlant#readme"
}