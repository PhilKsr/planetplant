# PlanetPlant Environment Configuration
# Copy this file to .env and update the values

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info


# InfluxDB Configuration (for time-series data)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=plantplant-super-secret-auth-token
INFLUXDB_ORG=planetplant
INFLUXDB_BUCKET=sensor-data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=plantplant123
INFLUXDB_RETENTION=90d

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=planetplant-server

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=plantplant123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGINS=http://localhost,http://localhost:3001,http://localhost:5173

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=plantplant123

# Frontend URLs (for production)
FRONTEND_API_URL=http://localhost/api
FRONTEND_SOCKET_URL=http://localhost

# Watering System Settings
MOISTURE_THRESHOLD=30
WATERING_DURATION=5000
MAX_WATERING_PER_DAY=3

# Automation Settings
AUTOMATION_CHECK_INTERVAL=300000

# Container Registry Configuration
REGISTRY_PREFIX=ghcr.io/philksr/planetplant
IMAGE_TAG=latest
GITHUB_TOKEN=ghp_your_github_token_here