# PlanetPlant Production Environment
# Copy this to .env and update values for production deployment

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database - SQLite (Primary)
DB_PATH=/app/data/plantdata.db

# InfluxDB Configuration (for time-series data)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=CHANGE-THIS-TOKEN-IN-PRODUCTION
INFLUXDB_ORG=planetplant
INFLUXDB_BUCKET=sensor-data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=CHANGE-THIS-PASSWORD-IN-PRODUCTION
INFLUXDB_RETENTION=90d

# MQTT Configuration
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=planetplant-server

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE-THIS-PASSWORD-IN-PRODUCTION

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=GENERATE-A-STRONG-SECRET-KEY-FOR-PRODUCTION

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE-THIS-PASSWORD-IN-PRODUCTION

# Frontend URLs (for production)
FRONTEND_API_URL=https://your-domain.com/api
FRONTEND_SOCKET_URL=https://your-domain.com

# Watering System Settings
MOISTURE_THRESHOLD=30
WATERING_DURATION=5000
MAX_WATERING_PER_DAY=3

# Automation Settings
AUTOMATION_CHECK_INTERVAL=300000