# PlanetPlant Production Environment Configuration
# Optimized for stable production deployment on Raspberry Pi

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# InfluxDB Configuration (Production)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=plantplant-super-secret-auth-token
INFLUXDB_ORG=planetplant
INFLUXDB_BUCKET=sensor-data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=plantplant123
INFLUXDB_RETENTION=90d

# MQTT Configuration (Production)
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=planetplant-server

# Redis Configuration (Production)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=plantplant123

# Security (Production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Origins (Production)
CORS_ORIGINS=http://localhost,http://localhost:3001,http://localhost:5173

# Grafana Configuration (Production)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=plantplant123

# Frontend URLs (Production)
FRONTEND_API_URL=http://localhost/api
FRONTEND_SOCKET_URL=http://localhost

# Watering System Settings (Conservative for production)
MOISTURE_THRESHOLD=30
WATERING_DURATION=5000
MAX_WATERING_PER_DAY=3

# Automation Settings (Standard intervals)
AUTOMATION_CHECK_INTERVAL=300000  # 5 minutes

# Container Registry
REGISTRY_PREFIX=ghcr.io/philksr/planetplant
IMAGE_TAG=latest
GITHUB_TOKEN=ghp_your_github_token_here

# Logging (Production optimized)
BACKEND_FILE_LOGGING=true
BACKEND_CONSOLE_LOGGING=true
LOG_DIR=/app/logs
MQTT_VERBOSE_LOGGING=false
SENSOR_VERBOSE_LOGGING=false
DEBUG_LOGGING=false