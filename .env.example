# PlanetPlant Environment Configuration
# Copy this file to .env and update the values for your environment
# This file should be kept in sync with raspberry-pi/.env.example

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# INFLUXDB CONFIGURATION (Primary Database)
# =============================================================================
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=plantplant-super-secret-auth-token
INFLUXDB_ORG=planetplant
INFLUXDB_BUCKET=sensor-data
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=plantplant123
INFLUXDB_RETENTION=90d

# =============================================================================
# MQTT BROKER CONFIGURATION
# =============================================================================
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=planetplant-server

# =============================================================================
# REDIS CONFIGURATION (Caching & Session Management)
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=plantplant123

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
CORS_ORIGINS=http://localhost,http://localhost:3001,http://localhost:5173

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# =============================================================================
# GRAFANA CONFIGURATION
# =============================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=plantplant123
GRAFANA_PORT=3001

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_API_URL=http://localhost/api
FRONTEND_SOCKET_URL=http://localhost

# =============================================================================
# PLANT AUTOMATION SETTINGS
# =============================================================================
MOISTURE_THRESHOLD=30
WATERING_DURATION=5000
MAX_WATERING_PER_DAY=3
AUTOMATION_CHECK_INTERVAL=300000

# =============================================================================
# DOCKER & INFRASTRUCTURE
# =============================================================================
COMPOSE_PROJECT_NAME=planetplant
DOCKER_BUILDKIT=1

# =============================================================================
# RASPBERRY PI SPECIFIC
# =============================================================================
# Uncomment and configure for Raspberry Pi deployment
# TAILSCALE_AUTHKEY=your-tailscale-auth-key
# PI_DATA_PATH=/opt/planetplant/data
# PI_LOGS_PATH=/opt/planetplant/logs
# PI_CONFIG_PATH=/opt/planetplant/config

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# For development environment, override these values:
# NODE_ENV=development
# LOG_LEVEL=debug
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173
# INFLUXDB_URL=http://localhost:8086
# MQTT_BROKER_URL=mqtt://localhost:1883
# REDIS_URL=redis://localhost:6379