# PlanetPlant Staging Environment Configuration
# Used for testing before production deployment

# Application
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=debug

# InfluxDB Configuration (Staging)
INFLUXDB_URL=http://influxdb-staging:8086
INFLUXDB_TOKEN=plantplant-staging-token
INFLUXDB_ORG=planetplant-staging
INFLUXDB_BUCKET=sensor-data-staging
INFLUXDB_USERNAME=admin
INFLUXDB_PASSWORD=plantplant123
INFLUXDB_RETENTION=30d  # Shorter retention for staging

# MQTT Configuration (Staging)
MQTT_BROKER_URL=mqtt://mosquitto-staging:1883
MQTT_HOST=mosquitto-staging
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=planetplant-server-staging

# Redis Configuration (Staging)
REDIS_URL=redis://redis-staging:6379
REDIS_HOST=redis-staging
REDIS_PORT=6379
REDIS_PASSWORD=plantplant123

# Security (Staging)
JWT_SECRET=staging-jwt-secret-change-this-for-production

# CORS Origins (Staging)
CORS_ORIGINS=http://localhost:8080,http://localhost:3002

# Grafana Configuration (Staging)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=staging123

# Frontend URLs (Staging)
FRONTEND_API_URL=http://localhost:8080/api
FRONTEND_SOCKET_URL=http://localhost:8080

# Watering System Settings (More aggressive for testing)
MOISTURE_THRESHOLD=25
WATERING_DURATION=3000
MAX_WATERING_PER_DAY=5

# Automation Settings (Faster for testing)
AUTOMATION_CHECK_INTERVAL=60000  # 1 minute for staging

# Container Registry
REGISTRY_PREFIX=ghcr.io/philksr/planetplant
IMAGE_TAG=develop
GITHUB_TOKEN=ghp_your_github_token_here

# Logging (Verbose for staging)
BACKEND_FILE_LOGGING=true
BACKEND_CONSOLE_LOGGING=true
LOG_DIR=/app/logs
MQTT_VERBOSE_LOGGING=true
SENSOR_VERBOSE_LOGGING=true
DEBUG_LOGGING=true